unix {
	TOPDIR = $$system( pwd )
}

win32 {
	TOPDIR = $$system( cd )
}

include( qmake/all.include )

exists(  $$TOPDIR/ObjectTypes/PolyLine) {
  DEFINES *= ENABLE_POLYLINE_SUPPORT
}

exists(  $$TOPDIR/ObjectTypes/PolyMesh) {
  DEFINES *= ENABLE_POLYMESH_SUPPORT
}

exists(  $$TOPDIR/ObjectTypes/TriangleMesh) {
  DEFINES *= ENABLE_TRIANGLEMESH_SUPPORT
}

OPENFLIPPER += OpenFlipper
